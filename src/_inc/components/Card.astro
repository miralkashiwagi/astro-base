---
import Button from './Button.astro';

export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<a href={href} class="c-card">
  <h3 class="c-card__title">{title}</h3>
  <div class="c-card__body">
    <slot />
  </div>
  <Button type="span" href="" text="buttonテキスト" />
</a>
